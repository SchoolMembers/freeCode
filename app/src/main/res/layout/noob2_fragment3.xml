<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/king_page6_title"
                android:layout_gravity="center_vertical"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/simple"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quiz_chap_info"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/simple"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quiz1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quiz_noob2_question1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/simple"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/quiz_noob2_question1_ex"
                android:fontFamily="@font/code"
                android:textSize="14sp"
                android:background="@color/lightGray"
                android:lineSpacingExtra="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/choice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/answer1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/num1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:padding="6dp"/>
                    <TextView
                        android:id="@+id/answer1t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_noob2_question1_answer1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/choice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/answer2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/num2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:padding="6dp"/>
                    <TextView
                        android:id="@+id/answer2t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_noob2_question1_answer2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/choice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/answer3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/num3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:padding="6dp"/>
                    <TextView
                        android:id="@+id/answer3t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_noob2_question1_answer3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/choice4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/answer4"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/num4"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:padding="6dp"/>
                    <TextView
                        android:id="@+id/answer4t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_noob2_question1_answer4"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/choice5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp">
                    <TextView
                        android:id="@+id/answer5"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/num5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:padding="6dp"/>
                    <TextView
                        android:id="@+id/answer5t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_noob2_question1_answer5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:paddingBottom="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/choice"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/simple"
                        android:gravity="center_vertical"
                        android:padding="3dp"/>
                    <TextView
                        android:id="@+id/choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="3dp"
                        android:fontFamily="@font/simple"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <android.widget.Button
                    android:id="@+id/quiz_button"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="@string/quiz_button"
                    android:fontFamily="@font/simple"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/button_background1"
                    android:backgroundTint="@color/veryLightOrange"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="30dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/completed"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complete_button_info"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="@font/simple"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <android.widget.Button
                android:id="@+id/before_button"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="@string/before"
                android:fontFamily="@font/bold"
                android:textSize="15sp"
                android:background="@drawable/button_background1"
                android:layout_gravity="center"
                android:gravity="center"/>
            <android.widget.Button
                android:id="@+id/next_button"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="@string/next"
                android:fontFamily="@font/bold"
                android:textSize="15sp"
                android:background="@drawable/button_background1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>